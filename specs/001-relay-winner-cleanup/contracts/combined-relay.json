{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CombinedRelayPayload",
  "type": "object",
  "required": ["attacking_team", "match", "prop", "timestamp"],
  "properties": {
    "timestamp": {
      "type": "integer",
      "description": "Source event timestamp that triggered this relay payload."
    },
    "attacking_team": {
      "type": "string",
      "description": "The attacking team label configured for the current match."
    },
    "winner_reason": {
      "type": ["string", "null"],
      "enum": ["TeamElimination", "ObjectiveDetonated", "ObjectiveDefused", "TimeExpiration", null],
      "description": "Authority that determined the winner."
    },
    "match": {
      "type": "object",
      "required": ["id", "status", "is_last_send"],
      "properties": {
        "id": { "type": "string" },
        "status": { "type": "string" },
        "remaining_time_ms": { "type": ["integer", "null"] },
        "winner_team": { "type": ["string", "null"] },
        "is_last_send": { "type": "boolean" },
        "players": {
          "type": ["array", "null"],
          "items": { "type": "object" }
        }
      },
      "additionalProperties": true
    },
    "prop": {
      "type": "object",
      "required": ["state", "timestamp", "uptime_ms"],
      "properties": {
        "state": {
          "type": "string",
          "enum": ["armed", "planted", "defusing", "defused", "exploded"]
        },
        "timestamp": { "type": "integer" },
        "uptime_ms": { "type": "integer" }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
